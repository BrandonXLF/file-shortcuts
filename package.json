{
	"name": "file-shortcuts",
	"displayName": "File Shortcuts",
	"description": "Save files to a shortcut menu for convenient access",
	"publisher": "brandonfowler",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/BrandonXLF/file-shortcuts"
	},
	"homepage": "https://github.com/BrandonXLF/file-shortcuts",
	"bugs": {
		"url": "https://github.com/BrandonXLF/file-shortcuts/issues"
	},
	"icon": "media/icon.png",
	"version": "0.0.9",
	"engines": {
		"vscode": "^1.51.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"files",
		"shortcuts"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "file-shortcuts.add",
				"title": "Add Shortcut",
				"icon": "$(add)"
			},
			{
				"command": "file-shortcuts.rename",
				"title": "Rename..."
			},
			{
				"command": "file-shortcuts.remove",
				"title": "Remove",
				"icon": "$(close)"
			},
			{
				"command": "file-shortcuts.open",
				"title": "Open"
			},
			{
				"command": "file-shortcuts.refresh",
				"title": "Refresh Shortcuts",
				"icon": "$(refresh)"
			}
		],
		"views": {
			"explorer": [
				{
					"id": "file-shortcuts",
					"name": "Shortcuts",
					"contextualTitle": "Shortcuts",
					"icon": "media/icon.svg"
				}
			]
		},
		"menus": {
			"explorer/context": [
				{
					"command": "file-shortcuts.add",
					"when": "!explorerResourceIsFolder",
					"group": "7_modification"
				}
			],
			"editor/title/context": [
				{
					"command": "file-shortcuts.add",
					"when": "resourceSet",
					"group": "7_modification"
				}
			],
			"view/title": [
				{
					"command": "file-shortcuts.add",
					"when": "view == file-shortcuts",
					"group": "navigation@1"
				},
				{
					"command": "file-shortcuts.refresh",
					"when": "view == file-shortcuts",
					"group": "navigation@2"
				}
			],
			"view/item/context": [
				{
					"command": "file-shortcuts.remove",
					"when": "view == file-shortcuts && viewItem != top",
					"group": "inline"
				},
				{
					"command": "file-shortcuts.remove",
					"when": "view == file-shortcuts && viewItem != top",
					"group": "navigation@2"
				},
				{
					"command": "file-shortcuts.rename",
					"when": "view == file-shortcuts && viewItem == group",
					"group": "navigation@3"
				}
			],
			"commandPalette": [
				{
					"command": "file-shortcuts.remove",
					"when": "false"
				},
				{
					"command": "file-shortcuts.open",
					"when": "false"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "node ./esbuild.js",
		"package": "node ./esbuild.js --production",
		"lint": "eslint src --ext ts",
		"watch": "node ./esbuild.js --watch"
	},
	"devDependencies": {
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.51.0",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
		"esbuild": "^0.25.8",
		"eslint": "^7.9.0",
		"typescript": "^4.0.2"
	}
}
